<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <base href="~/" />
    <link rel="icon" href="favicon.ico">
    <link href="css/core-style.css" rel="stylesheet" />
</head>
<body>

    <!-- ##### Header Area Start ##### -->
    <header class="header_area">
        <div class="classy-nav-container breakpoint-off d-flex align-items-center justify-content-between">
            <!-- Classy Menu -->
            <nav class="classy-navbar" id="essenceNav">
                <!-- Logo -->
                <a class="nav-brand" href="@Url.Action("Index", "Home")"><img src="img/core-img/sample-logo.png" alt=""></a>
                <!-- Navbar Toggler -->
                <div class="classy-navbar-toggler">
                    <span class="navbarToggler"><span></span><span></span><span></span></span>
                </div>
                <!-- Menu -->
                <div class="classy-menu">
                    <!-- close btn -->
                    <div class="classycloseIcon">
                        <div class="cross-wrap"><span class="top"></span><span class="bottom"></span></div>
                    </div>
                    <!-- Nav Start -->
                    <div class="classynav">
                        <ul>
                            <li>
                                <a href="#">Растения</a>
                                <div class="megamenu">
                                    <ul class="single-mega cn-col-4">
                                        <li class="title">Стайни растения</li>
                                        <li><a href="shop.html">Цъфтящи растения</a></li>
                                        <li><a href="shop.html">Нецъфтящи растения</a></li>
                                        <li><a href="shop.html">Насекомоядни растения</a></li>
                                        <li><a href="shop.html">Сукуленти</a></li>
                                    </ul>
                                    <ul class="single-mega cn-col-4">
                                        <li class="title">Външни растения</li>
                                        <li><a href="shop.html">Вечнозелени храсти и дръвчета</a></li>
                                        <li><a href="shop.html">Цъфтящи храсти и дръвчета</a></li>
                                        <li><a href="shop.html">Водни растения</a></li>

                                    </ul>
                                    <ul class="single-mega cn-col-4">
                                        <li class="title">Сенколюбиви растения</li>
                                        <li><a href="shop.html">Бегония</a></li>
                                        <li><a href="shop.html">Здравец</a></li>
                                        <li><a href="shop.html">Циганче</a></li>
                                        <li><a href="shop.html">Функия</a></li>

                                    </ul>
                                    <ul class="single-mega cn-col-4">
                                        <li class="title">Разсад</li>
                                        <li><a href="shop.html">Семена</a></li>
                                        <li><a href="shop.html">Луковици</a></li>

                                    </ul>


                                </div>
                            </li>
                            <li>
                                <a href="#">Градина</a>
                                <div class="megamenu">
                                    <ul class="single-mega cn-col-4">
                                        <li class="title">Торове</li>
                                        <li><a href="shop.html">Торове</a></li>
                                        <li><a href="shop.html">Почви</a></li>
                                        <li><a href="shop.html">Тревни смески</a></li>
                                    </ul>
                                    <ul class="single-mega cn-col-4">
                                        <li class="title">Саксии</li>
                                        <li><a href="shop.html">Саксии</a></li>
                                        <li><a href="shop.html">Вази</a></li>
                                        <li><a href="shop.html">Кашпи</a></li>
                                        <li><a href="shop.html">Сандъци</a></li>
                                        <li><a href="shop.html">Цветарници</a></li>

                                    </ul>
                                    <ul class="single-mega cn-col-4">
                                        <li class="title">Напояване</li>
                                        <li><a href="shop.html">Лейки</a></li>
                                        <li><a href="shop.html">Пулверизатори</a></li>

                                    </ul>
                                    <ul class="single-mega cn-col-4">
                                        <li class="title">Градински декорации</li>
                                        <li><a href="shop.html">Декоративни фигурки</a></li>
                                        <li><a href="shop.html">Декоративни камъни</a></li>

                                    </ul>

                                </div>

                            </li>


                            <li>
                                <a href="blog.html">Свободно време</a>
                                <div class="megamenu">
                                    <ul class="single-mega cn-col-4">
                                        <li class="title">Къмпинг</li>
                                        <li><a href="shop.html">Палатки</a></li>
                                        <li><a href="shop.html">Спални чували</a></li>
                                        <li><a href="shop.html">Къмпинг оборудване</a></li>
                                        <li><a href="shop.html">Столове и маси</a></li>
                                    </ul>
                                    <ul class="single-mega cn-col-4">
                                        <li class="title">Барбекю</li>
                                        <li><a href="shop.html">Грил</a></li>
                                        <li><a href="shop.html">Скара</a></li>
                                        <li><a href="shop.html">Оборудване за барбекю</a></li>
                                    </ul>
                                    <ul class="single-mega cn-col-4">
                                        <li class="title">Осветление</li>
                                        <li><a href="shop.html">Соларни лампи</a></li>
                                        <li><a href="shop.html">Фенери</a></li>
                                        <li><a href="shop.html">Сфери</a></li>
                                    </ul>
                                </div>
                            </li>
                            <li><a href="contact.html">Контакти</a></li>
                        </ul>
                    </div>
                </div>
            </nav>
            <!-- Nav End -->
            <!-- Header Meta Data -->
            <div class="header-meta d-flex clearfix justify-content-end">
                <!-- Search Area -->
                <div class="search-area">
                    <form action="#" method="post">
                        <input type="search" name="search" id="headerSearch" placeholder="Търсене">
                        <button type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
                    </form>
                </div>
                <!-- Favourite Area -->
                <div class="favourite-area">
                    <a href="#"><img src="img/core-img/heart.svg" alt=""></a>
                </div>
                <!-- User Login Info -->
                <partial name="_LoginPartial" />
                <!-- Cart Area -->
                <div class="cart-area">
                    <a href="#" id="essenceCartBtn"><img src="img/core-img/bag.svg" alt=""> <span>3</span></a>
                </div>
            </div>

        </div>
    </header>
    <!-- ##### Header Area End ##### -->
    <!-- ##### Right Side Cart Area ##### -->
    <div class="cart-bg-overlay"></div>

    <div class="right-side-cart-area">

        <!-- Cart Button -->
        <div class="cart-button">
            <a href="#" id="rightSideCart"><img src="img/core-img/bag.svg" alt=""> <span>3</span></a>
        </div>

        <div class="cart-content d-flex">

            <!-- Cart List Area -->
            <div class="cart-list">
                <!-- Single Cart Item -->
                <div class="single-cart-item">
                    <a href="#" class="product-image">
                        <img src="img/product-img/product1.jpg" class="cart-thumb" alt="">
                        <!-- Cart Item Desc -->
                        <div class="cart-item-desc">
                            <span class="product-remove"><i class="fa fa-close" aria-hidden="true"></i></span>
                            <h6>Сукулентно растение в глинена саксия</h6>
                            <span>1 бр</span>
                            <p class="price">9.99лв.</p>
                        </div>
                    </a>
                </div>

                <!-- Single Cart Item -->
                <div class="single-cart-item">
                    <a href="#" class="product-image">
                        <img src="img/product-img/product2.jpg" class="cart-thumb" alt="">
                        <!-- Cart Item Desc -->
                        <div class="cart-item-desc">
                            <span class="product-remove"><i class="fa fa-close" aria-hidden="true"></i></span>
                            <h6>Бегония</h6>
                            <span>1 бр</span>
                            <p class="price">6.99лв.</p>
                        </div>
                    </a>
                </div>

                <!-- Single Cart Item -->
                <div class="single-cart-item">
                    <a href="#" class="product-image">
                        <img src="img/product-img/product4.jpg" class="cart-thumb" alt="">
                        <!-- Cart Item Desc -->
                        <div class="cart-item-desc">
                            <span class="product-remove"><i class="fa fa-close" aria-hidden="true"></i></span>
                            <h6>Ваза с форма на листо</h6>
                            <span>1 бр</span>
                            <p class="price">19.99лв.</p>
                        </div>
                    </a>
                </div>
            </div>


            <!-- Cart Summary -->
            <div class="cart-amount-summary">

                <h2>Кошница</h2>
                <ul class="summary-table">
                    <li><span>Доставка:</span> <span>2.99лв.</span></li>
                    <li><span>Намаление:</span> <span>-15%</span></li>
                    <li><span>Общо:</span> <span>39.96лв.</span></li>
                </ul>
                <div class="checkout-btn mt-100">
                    <a href="checkout.html" class="btn essence-btn">Поръчай</a>
                </div>
            </div>
        </div>
    </div>
    <!-- ##### Right Side Cart End ##### -->

    @RenderBody()

    <!-- ##### Footer Area Start ##### -->
    <footer class="footer_area clearfix">
        <div class="container">
            <div class="row">
                <!-- Single Widget Area -->
                <div class="col-12 col-md-6">
                    <div class="single_widget_area d-flex mb-30">
                        <!-- Logo -->
                        <div class="footer-logo mr-50">
                            <a href="#"><img src="img/core-img/sample-logo.png" alt=""></a>
                        </div>
                        <!-- Footer Menu -->
                        <div class="footer_menu">
                            <ul>
                                <li><a href="">Растения</a></li>
                                <li><a href="">Градина</a></li>
                                <li><a href="">Свободно време</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- Single Widget Area -->
                <div class="col-12 col-md-6">
                    <div class="single_widget_area mb-30">
                        <ul class="footer_widget_menu">
                            <li><a href="#">За нас</a></li>
                            <li><a href="#">Общи условия</a></li>
                            <li><a href="#">Контакти</a></li>
                            <li><a href="#">Начин на плащане</a></li>
                            <li><a href="#">Доставка</a></li>
                            <li><a href="#">Поръчки</a></li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="row align-items-end">
                <!-- Single Widget Area -->
                <div class="col-12 col-md-6">
                    <div class="single_widget_area">
                        <div class="footer_heading mb-30">
                            <h6>Subscribe</h6>
                        </div>
                        <div class="subscribtion_form">
                            <form action="#" method="post">
                                <input type="email" name="mail" class="mail" placeholder="Your email here">
                                <button type="submit" class="submit"><i class="fa fa-long-arrow-right" aria-hidden="true"></i></button>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- Single Widget Area -->
                <div class="col-12 col-md-6">
                    <div class="single_widget_area">
                        <div class="footer_social_area">
                            <a href="#" data-toggle="tooltip" data-placement="top" title="Facebook"><i class="fa fa-facebook" aria-hidden="true"></i></a>
                            <a href="#" data-toggle="tooltip" data-placement="top" title="Instagram"><i class="fa fa-instagram" aria-hidden="true"></i></a>
                            <a href="#" data-toggle="tooltip" data-placement="top" title="Twitter"><i class="fa fa-twitter" aria-hidden="true"></i></a>
                            <a href="#" data-toggle="tooltip" data-placement="top" title="Pinterest"><i class="fa fa-pinterest" aria-hidden="true"></i></a>
                            <a href="#" data-toggle="tooltip" data-placement="top" title="Youtube"><i class="fa fa-youtube-play" aria-hidden="true"></i></a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-5">
                <div class="col-md-12 text-center">
                </div>
            </div>

        </div>
    </footer>
    <!-- ##### Footer Area End ##### -->
    <!-- jQuery -->
    <script src="js/jquery/jquery-2.2.4.min.js"></script>
    <!-- Popper js -->
    <script src="js/popper.min.js"></script>
    <!-- Bootstrap js -->
    <script src="js/bootstrap.min.js"></script>
    <!-- Plugins js -->
    <script src="js/plugins.js"></script>
    <!-- Classy Nav js -->
    <script src="js/classy-nav.min.js"></script>
    <!-- Active js -->
    <script src="js/active.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
